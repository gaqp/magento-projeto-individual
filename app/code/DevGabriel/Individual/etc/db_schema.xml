<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
     <table name="third_party_seller">
         <column xsi:type="int" name="id" padding="10" identity="true" comment="Identificador da entidade"/>
        <column xsi:type="varchar" name="name" length="500" comment="Nome do Vendedor" nullable="false"></column>
        <column xsi:type="varchar" name="cpf" length="15" comment="CPF do vendedor" nullable="false"></column>
        <column xsi:type="varchar" name="street" length="255" comment="Nome da Rua do Vendedor" nullable="false"></column>
        <column xsi:type="varchar" name="neighborhood" length="255" comment="Bairro do Vendedor" nullable="false"></column>
        <column xsi:type="varchar" name="city" length="50" comment="Cidade do Vendedor" nullable="false"></column>
        <column xsi:type="varchar" name="state" length="50" comment="Estado do Vendedor" nullable="false"></column>
        <column xsi:type="varchar" name="phone" length="50" comment="Telefone do Vendedor" nullable="false"></column>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
     </table>
</schema>
